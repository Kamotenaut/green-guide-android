<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/banner" />

            <TextView
                android:id="@+id/prayersheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Prayers"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25sp" />

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:paddingBottom="20dp"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vptitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Spirit of Faith"
                            android:textAllCaps="true"
                            android:textColor="#1e1e1e"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/vptxt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Let us remember that we are in the most holy presence of God."
                            android:textColor="#393939"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/vptxttag1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#393939"
                            android:text="Ating alalahanin na ang Diyos ay ating kapiling."
                            android:textStyle="italic"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vptitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zeal for Service"
                            android:textAllCaps="true"
                            android:textColor="#1e1e1e"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/vptxt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="I will continue, O my God to do all my actions for the love of you."
                            android:textColor="#393939"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/vptxttag2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#393939"
                            android:text="Ipagpapatuloy ko, O Diyos, ang lahat ng aking gawain upang ikaw ay lalong pakaibigin."
                            android:textStyle="italic"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vptitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Communion in mission"
                            android:textAllCaps="true"
                            android:textColor="#1e1e1e"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/vptxt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Live Jesus in our hearts.\nForever!"
                            android:textColor="#393939"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/vptxttag3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#393939"
                            android:text="Mabuhay ka Hesus sa aming puso. Magpakailanman!"
                            android:textStyle="italic"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>